<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MenuIndio.Views.VisitasPage"         
             Title="{Binding Title}">

   
    <ContentPage.Content>
        <StackLayout>
            <Image 
                    Aspect="AspectFill" 
                    Opacity="0.6" 
                    Source="https://imgar.zonapropcdn.com/avisos/1/00/42/11/40/76/1200x1200/1570800863.jpg"/>
            <Image 
                    Aspect="AspectFill"                     
                    Source="https://imgar.zonapropcdn.com/avisos/1/00/42/11/40/76/1200x1200/1570800863.jpg"/>
            <Image 
                    Aspect="AspectFill" 
                    Opacity="0.6" 
                    Source="https://imgar.zonapropcdn.com/avisos/1/00/42/11/40/76/1200x1200/1570800863.jpg"/>
            <Label Text="Enviar Invitacion !"
                FontSize="50"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Enviar por WhatsApp" 
                    Margin="0,10,0,0"                       
                    BackgroundColor="#29FF99" 
                    ContentLayout="Left,5" 
                    CornerRadius="30"
                    Image="enviar.png" 
                    Clicked="OpenWhatsApp"/>
          
        </StackLayout>

    </ContentPage.Content>
</ContentPage>